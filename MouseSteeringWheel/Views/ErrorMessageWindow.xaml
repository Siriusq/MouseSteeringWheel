<Window x:Class="MouseSteeringWheel.Views.ErrorMessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MouseSteeringWheel.Views"
        mc:Ignorable="d"
        Title="Error" Height="200" Width="330"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid>
        <TextBlock Name="ErrorMessageText" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10"/>
        <Button Content="OK" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="10" Width="100" Click="OnOkClicked"/>
    </Grid>
</Window>
