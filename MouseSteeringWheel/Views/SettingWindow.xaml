<Window x:Class="MouseSteeringWheel.Views.SettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MouseSteeringWheel.Views"
        xmlns:langs="clr-namespace:MouseSteeringWheel.Properties"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="SettingWindow" Height="500" Width="450"
        Background="#FFF3F3F3">
    <Grid Margin="10,10,10,10">
        <Grid.RowDefinitions>
            <!--其他设置-->
            <RowDefinition Height="4*" />
            <!--按键绑定-->
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Margin="0,0,2,0">
                <!--左侧主列-->
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="4*" />
                </Grid.RowDefinitions>

                <!--vJoy设备ID与语言-->
                <Border BorderThickness="2" BorderBrush="#FFC2C2C2" CornerRadius="10" Grid.Row="0" Margin="0,0,0,2"/>
                <Grid Grid.Row="0"  Margin="0,0,0,2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <!--vJoy设备ID-->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4*" />
                            <ColumnDefinition Width="3*" />
                            <ColumnDefinition Width="5*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0">
                            <Border BorderThickness="2" BorderBrush="#FFC2C2C2" CornerRadius="10,0,10,0" Margin="0,0,0,0"/>
                            <Label Content="{x:Static langs:Resources.GeneralName}" VerticalAlignment="Center" Margin="5,5,5,5" FontWeight="Bold"/>
                        </Grid>
                        <Grid Grid.Column="2" Margin="5,5,0,5">
                            <Label Content="{x:Static langs:Resources.vJoyDeviceIDName}" VerticalAlignment="Center"/>
                        </Grid>
                        <Grid Grid.Column="3" Margin="0,5,10,5">
                            <Border BorderBrush="#FFC2C2C2" BorderThickness="2" CornerRadius="5" Height="30" Background="White">
                                <TextBox 
                                        x:Name="vJoyDeviceID"                                    
                                        Height="30"
                                        Text="01"
                                        VerticalAlignment="Center"
                                        HorizontalContentAlignment="Center"
                                        VerticalContentAlignment="Center"
                                        TextWrapping="NoWrap"
                                        VerticalScrollBarVisibility="Hidden"                                         
                                        Background="Transparent" BorderBrush="#00ABADB3"
                                    />
                            </Border>
                        </Grid>
                    </Grid>
                    <!--语言-->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0" Margin="5,5,0,5">
                            <Label Content="{x:Static langs:Resources.LanguageName}" VerticalAlignment="Center"/>
                        </Grid>
                        <Grid Grid.Column="1" Margin="5,5,5,5">
                            <RadioButton GroupName="Language" VerticalAlignment="Center">English</RadioButton>
                        </Grid>
                        <Grid Grid.Column="2" Margin="5,5,5,5">
                            <RadioButton GroupName="Language" VerticalAlignment="Center">简中</RadioButton>
                        </Grid>
                        <Grid Grid.Column="3" Margin="5,5,5,5">
                            <RadioButton GroupName="Language" VerticalAlignment="Center">繁中</RadioButton>
                        </Grid>
                    </Grid>
                </Grid>

                <!--UI相关-->
                <Border BorderThickness="2" BorderBrush="#FFC2C2C2" CornerRadius="10" Grid.Row="1" Margin="0,2,0,2"/>
                <Grid Grid.Row="1" Margin="0,2,0,2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <!--UI样式选择-->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*" />
                            <ColumnDefinition Width="4*" />
                            <ColumnDefinition Width="10*" />
                            <ColumnDefinition Width="6*" />
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0" Margin="5,5,0,5">
                            <Border BorderThickness="2" BorderBrush="#FFC2C2C2" CornerRadius="10,0,10,0" Margin="-5,-5,-5,-5"/>
                            <Label Content="UI" VerticalAlignment="Center" FontWeight="Bold"/>
                        </Grid>
                        <Grid Grid.Column="1" Margin="10,5,0,5">
                            <Label Content="{x:Static langs:Resources.UIStyleName}" VerticalAlignment="Center"/>
                        </Grid>
                        <Grid Grid.Column="2" Margin="5,5,5,5">
                            <RadioButton GroupName="UIStyle" VerticalAlignment="Center" Content="{x:Static langs:Resources.SteeringWheelName}"/>
                        </Grid>
                        <Grid Grid.Column="3" Margin="5,5,5,5">
                            <RadioButton GroupName="UIStyle" VerticalAlignment="Center" Content="{x:Static langs:Resources.JoystickName}"/>
                        </Grid>
                    </Grid>
                    <!--UI缩放系数-->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="6*" />
                            <ColumnDefinition Width="3*" />
                            <ColumnDefinition Width="6*" />
                            <ColumnDefinition Width="3*" />
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0" Margin="5,5,0,5">
                            <Label Content="{x:Static langs:Resources.UIScaleFactorName}" VerticalAlignment="Center"/>
                        </Grid>
                        <Grid Grid.Column="1" Margin="0,5,10,5">
                            <Border BorderBrush="#FFC2C2C2" BorderThickness="2" CornerRadius="5" Height="30" Background="White">
                                <TextBox 
                                    x:Name="UIScaleFactor"                                    
                                    Height="30"
                                    Text="01"
                                    VerticalAlignment="Center"
                                    HorizontalContentAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    TextWrapping="NoWrap"
                                    VerticalScrollBarVisibility="Hidden"                                         
                                    Background="Transparent" BorderBrush="#00ABADB3"
                                />
                            </Border>
                        </Grid>
                        <!--UI Y轴偏移-->
                        <Grid Grid.Column="2" Margin="2,5,5,5">
                            <Label Content="{x:Static langs:Resources.UIYAxisOffset}" VerticalAlignment="Center"/>
                        </Grid>
                        <Grid Grid.Column="3" Margin="0,5,10,5">
                            <Border BorderBrush="#FFC2C2C2" BorderThickness="2" CornerRadius="5" Height="30" Background="White">
                                <TextBox 
                                    x:Name="UIYAxisOffset"                                    
                                    Height="30"
                                    Text="524"
                                    VerticalAlignment="Center"
                                    HorizontalContentAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    TextWrapping="NoWrap"
                                    VerticalScrollBarVisibility="Hidden"                                         
                                    Background="Transparent" BorderBrush="#00ABADB3"
                                />
                            </Border>
                        </Grid>
                    </Grid>
                </Grid>

                <!--快捷键设置-->
                <Border BorderThickness="2" BorderBrush="#FFC2C2C2" CornerRadius="10" Grid.Row="2" Margin="0,2,0,2"/>
                <Grid Grid.Row="2"  Margin="0,2,0,2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!---->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4*" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="9*" />
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0" Margin="5,5,0,5">
                            <Border BorderThickness="2" BorderBrush="#FFC2C2C2" CornerRadius="10,0,10,0" Margin="-5,-5,-5,-5"/>
                            <Label Content="{x:Static langs:Resources.HotkeyName}" VerticalAlignment="Center" FontWeight="Bold"/>
                        </Grid>
                        <Grid Grid.Column="2" Margin="3,5,0,5">
                            <Label Content="{x:Static langs:Resources.HotkeyHintName}" VerticalAlignment="Center"/>
                        </Grid>

                    </Grid>

                    <!--暂停快捷键-->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*" />
                            <ColumnDefinition Width="5*" />
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0" Margin="5,5,0,5">
                            <Label Content="{x:Static langs:Resources.PauseJoystickName}" VerticalAlignment="Center"/>
                        </Grid>
                        <Grid Grid.Column="1" Margin="0,5,10,5">
                            <Border BorderBrush="#FFC2C2C2" BorderThickness="2" CornerRadius="5" Height="30" Background="White">
                                <TextBox
                                    x:Name="PauseHotKeyTextBox"
                                    Height="30"
                                    Text="Shift Alt Ctrl P"
                                    VerticalAlignment="Center"
                                    HorizontalContentAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    TextWrapping="NoWrap"
                                    VerticalScrollBarVisibility="Hidden"                                         
                                    Background="Transparent" BorderBrush="#00ABADB3"
                                    IsReadOnly="true"
                                    PreviewKeyDown="Pause_HotKeyTextBox_PreviewKeyDown" />
                            </Border>
                        </Grid>
                    </Grid>

                    <!--打开设置快捷键-->
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*" />
                            <ColumnDefinition Width="5*" />
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0" Margin="5,5,0,5">
                            <Label Content="{x:Static langs:Resources.OpenSettingsName}" VerticalAlignment="Center"/>
                        </Grid>
                        <Grid Grid.Column="1" Margin="0,5,10,5">
                            <Border BorderBrush="#FFC2C2C2" BorderThickness="2" CornerRadius="5" Height="30" Background="White">
                                <TextBox
                                    x:Name="SettingHotKeyTextBox"
                                    Height="30"
                                    Text="Shift Alt Ctrl O"
                                    VerticalAlignment="Center"
                                    HorizontalContentAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    TextWrapping="NoWrap"
                                    VerticalScrollBarVisibility="Hidden"                                         
                                    Background="Transparent" BorderBrush="#00ABADB3"
                                    IsReadOnly="true"
                                    PreviewKeyDown="Setting_HotKeyTextBox_PreviewKeyDown" />
                            </Border>
                        </Grid>
                    </Grid>

                    <!--重置摇杆位置快捷键-->
                    <Grid Grid.Row="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*" />
                            <ColumnDefinition Width="5*" />
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0" Margin="5,5,0,5">
                            <Label Content="{x:Static langs:Resources.ResetJoystickName}" VerticalAlignment="Center"/>
                        </Grid>
                        <Grid Grid.Column="1" Margin="0,5,10,5">
                            <Border BorderBrush="#FFC2C2C2" BorderThickness="2" CornerRadius="5" Height="30" Background="White">
                                <TextBox
                                    x:Name="ResetJoystickHotKeyTextBox"
                                    Height="30"
                                    Text="Shift Alt Ctrl R"
                                    VerticalAlignment="Center"
                                    HorizontalContentAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    TextWrapping="NoWrap"
                                    VerticalScrollBarVisibility="Hidden"                                         
                                    Background="Transparent" BorderBrush="#00ABADB3"
                                    IsReadOnly="true"
                                    PreviewKeyDown="Reset_Joystick_HotKeyTextBox_PreviewKeyDown" />
                            </Border>
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>

            <!--右侧主列-->
            <Grid Grid.Column="1" Margin="2,0,0,0">
                <!--左侧主列-->
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <!--X轴摇杆-->
                <Border BorderThickness="2" BorderBrush="#FFC2C2C2" CornerRadius="10" Grid.Row="0" Margin="0,0,0,2"/>
                <Grid Grid.Row="0"  Margin="0,0,0,2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <!--开关-->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*" />
                            <ColumnDefinition Width="4*" />
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0">
                            <Border BorderThickness="2" BorderBrush="#FFC2C2C2" CornerRadius="10,0,10,0" Margin="0,0,0,0"/>
                            <Label Content="{x:Static langs:Resources.XAxisName}" VerticalAlignment="Center" Margin="5,5,5,5" FontWeight="Bold"/>
                        </Grid>
                        <Grid Grid.Column="1" Margin="5,5,10,5">
                            <CheckBox Content="{x:Static langs:Resources.EnableName}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                    </Grid>
                    <!--灵敏度-->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4*" />
                            <ColumnDefinition Width="3*" />
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0" Margin="5,5,0,5">
                            <Label Content="{x:Static langs:Resources.SensitivityName}" VerticalAlignment="Center"/>
                        </Grid>
                        <Grid Grid.Column="1" Margin="0,5,10,5">
                            <Border BorderBrush="#FFC2C2C2" BorderThickness="2" CornerRadius="5" Height="30" Background="White">
                                <TextBox 
                                    x:Name="XAxisSensitivity"                                    
                                    Height="30"
                                    Text="30"
                                    VerticalAlignment="Center"
                                    HorizontalContentAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    TextWrapping="NoWrap"
                                    VerticalScrollBarVisibility="Hidden"                                         
                                    Background="Transparent" BorderBrush="#00ABADB3"
                                />
                            </Border>
                        </Grid>
                    </Grid>
                    <!--非线性系数-->
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4*" />
                            <ColumnDefinition Width="3*" />
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0" Margin="5,5,0,5">
                            <Label Content="{x:Static langs:Resources.NonlinearName}" VerticalAlignment="Center"/>
                        </Grid>
                        <Grid Grid.Column="1" Margin="0,5,10,5">
                            <Border BorderBrush="#FFC2C2C2" BorderThickness="2" CornerRadius="5" Height="30" Background="White">
                                <TextBox 
                                    x:Name="XAxisNonlinearFactor"                                    
                                    Height="30"
                                    Text="1.0"
                                    VerticalAlignment="Center"
                                    HorizontalContentAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    TextWrapping="NoWrap"
                                    VerticalScrollBarVisibility="Hidden"                                         
                                    Background="Transparent" BorderBrush="#00ABADB3"
                                />
                            </Border>
                        </Grid>
                    </Grid>
                    <!--死区-->
                    <Grid Grid.Row="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4*" />
                            <ColumnDefinition Width="3*" />
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0" Margin="5,5,0,5">
                            <Label Content="{x:Static langs:Resources.DeadzoneName}" VerticalAlignment="Center"/>
                        </Grid>
                        <Grid Grid.Column="1" Margin="0,5,10,5">
                            <Border BorderBrush="#FFC2C2C2" BorderThickness="2" CornerRadius="5" Height="30" Background="White">
                                <TextBox 
                                    x:Name="XAxisDeadzone"                                    
                                    Height="30"
                                    Text="0.05"
                                    VerticalAlignment="Center"
                                    HorizontalContentAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    TextWrapping="NoWrap"
                                    VerticalScrollBarVisibility="Hidden"                                         
                                    Background="Transparent" BorderBrush="#00ABADB3"
                                />
                            </Border>
                        </Grid>
                    </Grid>
                </Grid>

                <!--Y轴摇杆-->
                <Border BorderThickness="2" BorderBrush="#FFC2C2C2" CornerRadius="10" Grid.Row="1" Margin="0,2,0,2"/>
                <Grid Grid.Row="1"  Margin="0,2,0,2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <!--开关-->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*" />
                            <ColumnDefinition Width="4*" />
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0">
                            <Border BorderThickness="2" BorderBrush="#FFC2C2C2" CornerRadius="10,0,10,0" Margin="0,0,0,0"/>
                            <Label Content="{x:Static langs:Resources.YAxisName}" VerticalAlignment="Center" Margin="5,5,5,5" FontWeight="Bold"/>
                        </Grid>
                        <Grid Grid.Column="1" Margin="5,5,10,5">
                            <CheckBox Content="{x:Static langs:Resources.EnableName}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                    </Grid>
                    <!--灵敏度-->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4*" />
                            <ColumnDefinition Width="3*" />
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0" Margin="5,5,0,5">
                            <Label Content="{x:Static langs:Resources.SensitivityName}" VerticalAlignment="Center"/>
                        </Grid>
                        <Grid Grid.Column="1" Margin="0,5,10,5">
                            <Border BorderBrush="#FFC2C2C2" BorderThickness="2" CornerRadius="5" Height="30" Background="White">
                                <TextBox 
                                    x:Name="YAxisSensitivity"                                    
                                    Height="30"
                                    Text="30"
                                    VerticalAlignment="Center"
                                    HorizontalContentAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    TextWrapping="NoWrap"
                                    VerticalScrollBarVisibility="Hidden"                                         
                                    Background="Transparent" BorderBrush="#00ABADB3"
                                />
                            </Border>
                        </Grid>
                    </Grid>
                    <!--非线性系数-->
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4*" />
                            <ColumnDefinition Width="3*" />
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0" Margin="5,5,0,5">
                            <Label Content="{x:Static langs:Resources.NonlinearName}" VerticalAlignment="Center"/>
                        </Grid>
                        <Grid Grid.Column="1" Margin="0,5,10,5">
                            <Border BorderBrush="#FFC2C2C2" BorderThickness="2" CornerRadius="5" Height="30" Background="White">
                                <TextBox 
                                    x:Name="YAxisNonlinearFactor"                                    
                                    Height="30"
                                    Text="1.0"
                                    VerticalAlignment="Center"
                                    HorizontalContentAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    TextWrapping="NoWrap"
                                    VerticalScrollBarVisibility="Hidden"                                         
                                    Background="Transparent" BorderBrush="#00ABADB3"
                                />
                            </Border>
                        </Grid>
                    </Grid>
                    <!--死区-->
                    <Grid Grid.Row="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4*" />
                            <ColumnDefinition Width="3*" />
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0" Margin="5,5,0,5">
                            <Label Content="{x:Static langs:Resources.DeadzoneName}" VerticalAlignment="Center"/>
                        </Grid>
                        <Grid Grid.Column="1" Margin="0,5,10,5">
                            <Border BorderBrush="#FFC2C2C2" BorderThickness="2" CornerRadius="5" Height="30" Background="White">
                                <TextBox 
                                    x:Name="YAxisDeadzone"                                    
                                    Height="30"
                                    Text="0.05"
                                    VerticalAlignment="Center"
                                    HorizontalContentAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    TextWrapping="NoWrap"
                                    VerticalScrollBarVisibility="Hidden"                                         
                                    Background="Transparent" BorderBrush="#00ABADB3"
                                />
                            </Border>
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>

        <!--底部按键绑定-->
        <Grid Grid.Row="1" Margin="0,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Border BorderThickness="2" BorderBrush="#FFC2C2C2" CornerRadius="10" Grid.Column="0" Margin="0,2,2,2"/>

            <Grid Grid.Column="0" Margin="0,0,2,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <!--标题-->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="4*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Border BorderThickness="2,2,2,2" BorderBrush="#FFC2C2C2" CornerRadius="10,0,10,0" Margin="0,2,0,2"/>
                        <Label Content="{x:Static langs:Resources.ButtonKeyBindingName}" VerticalAlignment="Center" Margin="5,5,5,5" FontWeight="Bold"/>
                    </Grid>
                    <Grid Grid.Column="1" Margin="5,5,0,5">
                        <Label Content="ID" VerticalAlignment="Center" Margin="-2,0,0,0" HorizontalAlignment="Right"/>
                    </Grid>
                    <!--减号-->
                    <Grid Grid.Column="2" Margin="5,5,0,5">
                        <Button BorderBrush="Transparent" Background="#00DDDDDD" FontWeight="Bold" RenderTransformOrigin="0.5,0.5">
                            <Label Content="-" VerticalAlignment="Center" Margin="0,0,0,0" RenderTransformOrigin="0.5,0.5">
                                <Label.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform ScaleX="2"/>
                                    </TransformGroup>
                                </Label.RenderTransform>
                            </Label>
                        </Button>
                    </Grid>
                    <!--ID输入框-->
                    <Grid Grid.Column="3" Margin="0,5,0,5">
                        <Border BorderBrush="#FFC2C2C2" BorderThickness="2" CornerRadius="5" Height="30" Background="White">
                            <TextBox 
                                x:Name="vJoyButtonID"                                    
                                Height="30"
                                Text="22"
                                VerticalAlignment="Center"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                TextWrapping="NoWrap"
                                VerticalScrollBarVisibility="Hidden"                                         
                                Background="Transparent" BorderBrush="#00ABADB3"
                            />
                        </Border>
                    </Grid>
                    <!--加号-->
                    <Grid Grid.Column="4" Margin="0,5,10,5">
                        <Button BorderBrush="Transparent" Background="#00DDDDDD" FontWeight="Bold" RenderTransformOrigin="0.5,0.5">
                            <Label Content="+" VerticalAlignment="Center" Margin="0,0,0,0" RenderTransformOrigin="0.5,0.5">
                            </Label>
                        </Button>
                    </Grid>
                </Grid>
                <!--键位-->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*" />
                        <ColumnDefinition Width="5*" />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0" Margin="10,0,10,5">
                        <CheckBox Content="{x:Static langs:Resources.EnableName}" VerticalAlignment="Center"/>
                    </Grid>
                    <Grid Grid.Column="1" Margin="0,0,10,5">
                        <Border BorderBrush="#FFC2C2C2" BorderThickness="2" CornerRadius="5" Height="30" Background="White">
                            <TextBox
                                x:Name="ButtonBindingHotKeyTextBox"
                                Height="30"
                                Text="Shift Alt Ctrl R"
                                VerticalAlignment="Center"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                TextWrapping="NoWrap"
                                VerticalScrollBarVisibility="Hidden"                                         
                                Background="Transparent" BorderBrush="#00ABADB3"
                                IsReadOnly="true"
                                PreviewKeyDown="Button_Binding_HotKeyTextBox_PreviewKeyDown" />
                        </Border>
                    </Grid>
                </Grid>
            </Grid>
            <!--确定和取消按钮-->
            <Grid Grid.Column="1" Margin="0,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Margin="2,2,0,2">
                    <Border BorderBrush="#FFC2C2C2" BorderThickness="2" CornerRadius="10" Background="White">
                        <Button Content="{x:Static langs:Resources.SaveName}" BorderBrush="#00707070" Background="#00DDDDDD" IsDefault="True" ClipToBounds="True" BorderThickness="0,0,0,0"></Button>
                    </Border>
                </Grid>
                <Grid Grid.Row="1" Margin="2,2,0,2">
                    <Border BorderBrush="#FFC2C2C2" BorderThickness="2" CornerRadius="10" Background="White">
                        <Button Content="{x:Static langs:Resources.CancelName}" BorderBrush="#00707070" Background="#00DDDDDD" IsCancel="True" ClipToBounds="True" BorderThickness="0,0,0,0"/>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
