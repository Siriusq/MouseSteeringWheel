<Window x:Class="MouseSteeringWheel.Views.SettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MouseSteeringWheel.Views"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="SettingWindow" Height="450" Width="800"
        Background="#FF1E2227">
    <Grid Margin="10,10,10,10">
        <Grid.RowDefinitions>
            <!--其他设置-->
            <RowDefinition Height="5*" />
            <!--按键绑定-->
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <!--左侧主列-->
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="3*" />
                    <RowDefinition Height="3*" />
                </Grid.RowDefinitions>

                <!--vJoy设备ID与语言-->
                <Border BorderThickness="2" BorderBrush="#FF565555" CornerRadius="10">
                    <Grid Grid.Row="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <!--vJoy设备ID-->
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0" Margin="10,0,0,0">
                                <Label Content="vJoy Device ID" Foreground="#FFE8E8E8" VerticalAlignment="Center"/>
                            </Grid>
                            <Grid Grid.Column="1">
                                <Border BorderBrush="#FF565555" BorderThickness="1" CornerRadius="5" Height="30" Background="#FF2C313C">
                                    <TextBox 
                                        x:Name="HotKeyTextBox"                                    
                                        Height="30"
                                        Text="1"
                                        VerticalAlignment="Center"
                                        HorizontalContentAlignment="Center"
                                        VerticalContentAlignment="Center"
                                        TextWrapping="NoWrap"
                                        VerticalScrollBarVisibility="Hidden" 
                                        Foreground="#FFE6E6E6"
                                        Background="Transparent" BorderBrush="#00ABADB3"
                                    />
                                </Border>

                            </Grid>
                            <Grid Grid.Column="2">
                                <Label Content="(1 - 16)" Foreground="#FFE8E8E8" VerticalAlignment="Center"/>
                            </Grid>
                        </Grid>
                        <!--语言-->
                        <Grid Grid.Row="1"></Grid>
                    </Grid>
                </Border>

                <Grid Grid.Row="1"></Grid>
                <Grid Grid.Row="2"></Grid>


            </Grid>

            <Grid Grid.Column="1">
                <!--右侧主列-->
            </Grid>
        </Grid>

        <Grid Grid.Row="1">
            <!--第二行-->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <!-- 这里2*标识占据所有宽度的七分之二-->
                <ColumnDefinition Width="*" />
                <!-- 这里2*标识占据所有宽度的七分之五-->
            </Grid.ColumnDefinitions>
        </Grid>

    </Grid>
</Window>
