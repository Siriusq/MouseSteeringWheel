<Window x:Class="MouseSteeringWheel.Views.SettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MouseSteeringWheel.Views"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="SettingWindow" Height="450" Width="600"
        Background="#FFF3F3F3">
    <Grid Margin="10,10,10,10">
        <Grid.RowDefinitions>
            <!--其他设置-->
            <RowDefinition Height="5*" />
            <!--按键绑定-->
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Margin="0,0,2,0">
                <!--左侧主列-->
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="4*" />
                </Grid.RowDefinitions>

                <!--vJoy设备ID与语言-->
                <Border BorderThickness="2" BorderBrush="#FFC2C2C2" CornerRadius="10" Grid.Row="0" Margin="0,0,0,2"/>
                <Grid Grid.Row="0"  Margin="0,0,0,2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <!--vJoy设备ID-->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5*" />
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="5*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0" Margin="5,5,0,5">
                            <Label Content="vJoy Device ID" VerticalAlignment="Center"/>
                        </Grid>
                        <Grid Grid.Column="1" Margin="0,5,10,5">
                            <Border BorderBrush="#FFC2C2C2" BorderThickness="2" CornerRadius="5" Height="30" Background="#FFF3F3F3">
                                <TextBox 
                                        x:Name="HotKeyTextBox"                                    
                                        Height="30"
                                        Text="01"
                                        VerticalAlignment="Center"
                                        HorizontalContentAlignment="Center"
                                        VerticalContentAlignment="Center"
                                        TextWrapping="NoWrap"
                                        VerticalScrollBarVisibility="Hidden"                                         
                                        Background="Transparent" BorderBrush="#00ABADB3"
                                    />
                            </Border>
                        </Grid>
                        <Grid Grid.Column="2">
                            <Label Content="(1 - 16)" VerticalAlignment="Center" Margin="5,5,5,5"/>
                        </Grid>
                    </Grid>
                    <!--语言-->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0" Margin="5,5,0,5">
                            <Label Content="Language" VerticalAlignment="Center"/>
                        </Grid>
                        <Grid Grid.Column="1" Margin="5,5,5,5">
                            <RadioButton GroupName="ready" VerticalAlignment="Center">English</RadioButton>
                        </Grid>
                        <Grid Grid.Column="2" Margin="5,5,5,5">
                            <RadioButton GroupName="ready" VerticalAlignment="Center">简中</RadioButton>
                        </Grid>
                        <Grid Grid.Column="3" Margin="5,5,5,5">
                            <RadioButton GroupName="ready" VerticalAlignment="Center">繁中</RadioButton>
                        </Grid>
                    </Grid>
                </Grid>

                <!--UI相关-->
                <Border BorderThickness="2" BorderBrush="#FFC2C2C2" CornerRadius="10" Grid.Row="1" Margin="0,2,0,2"/>
                <Grid Grid.Row="1" Margin="0,2,0,2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <!--UI样式选择-->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*" />
                            <ColumnDefinition Width="5*" />
                            <ColumnDefinition Width="4*" />
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0" Margin="5,5,0,5">
                            <Label Content="UI Style" VerticalAlignment="Center"/>
                        </Grid>
                        <Grid Grid.Column="1" Margin="5,5,5,5">
                            <RadioButton GroupName="ready" VerticalAlignment="Center">Steering Wheel</RadioButton>
                        </Grid>
                        <Grid Grid.Column="2" Margin="5,5,5,5">
                            <RadioButton GroupName="ready" VerticalAlignment="Center">Joystick</RadioButton>
                        </Grid>
                    </Grid>
                    <!--UI缩放系数-->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5*" />
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="5*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0" Margin="5,5,0,5">
                            <Label Content="UI Scale Factor" VerticalAlignment="Center"/>
                        </Grid>
                        <Grid Grid.Column="1" Margin="0,5,10,5">
                            <Border BorderBrush="#FFC2C2C2" BorderThickness="2" CornerRadius="5" Height="30" Background="#FFF3F3F3">
                                <TextBox 
                                    x:Name="UIScaleFactor"                                    
                                    Height="30"
                                    Text="01"
                                    VerticalAlignment="Center"
                                    HorizontalContentAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    TextWrapping="NoWrap"
                                    VerticalScrollBarVisibility="Hidden"                                         
                                    Background="Transparent" BorderBrush="#00ABADB3"
                                />
                            </Border>
                        </Grid>
                        <!--UI Y轴偏移-->
                        <Grid Grid.Column="2" Margin="5,5,5,5">
                            <Label Content="Y-Axis Offset" VerticalAlignment="Center"/>
                        </Grid>
                        <Grid Grid.Column="3" Margin="0,5,10,5">
                            <Border BorderBrush="#FFC2C2C2" BorderThickness="2" CornerRadius="5" Height="30" Background="#FFF3F3F3">
                                <TextBox 
                                    x:Name="UIYAxisOffset"                                    
                                    Height="30"
                                    Text="524"
                                    VerticalAlignment="Center"
                                    HorizontalContentAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    TextWrapping="NoWrap"
                                    VerticalScrollBarVisibility="Hidden"                                         
                                    Background="Transparent" BorderBrush="#00ABADB3"
                                />
                            </Border>
                        </Grid>
                    </Grid>
                </Grid>

                <!--快捷键设置-->
                <Border BorderThickness="2" BorderBrush="#FFC2C2C2" CornerRadius="10" Grid.Row="2" Margin="0,2,0,2"/>
                <Grid Grid.Row="2"  Margin="0,2,0,2">

                    <!--UI Y轴偏移-->
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5*" />
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="5*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>

                    </Grid>
                </Grid>
            </Grid>

            <!--右侧主列-->
            <Grid Grid.Column="1" Margin="2,0,0,0">

            </Grid>
        </Grid>

        <Grid Grid.Row="1">
            <!--第二行-->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <!-- 这里2*标识占据所有宽度的七分之二-->
                <ColumnDefinition Width="*" />
                <!-- 这里2*标识占据所有宽度的七分之五-->
            </Grid.ColumnDefinitions>
        </Grid>

    </Grid>
</Window>
