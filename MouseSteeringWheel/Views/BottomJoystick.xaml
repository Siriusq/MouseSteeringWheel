<UserControl x:Class="MouseSteeringWheel.Views.BottomJoystick"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MouseSteeringWheel.Views"
             mc:Ignorable="d" 
             >
    <Canvas Name="JoystickCanvas" HorizontalAlignment="Center" VerticalAlignment="Bottom" Opacity="0.5" RenderTransformOrigin="0.5,0.5">
        <Canvas.RenderTransform>
            <TransformGroup>
                <ScaleTransform/>
                <SkewTransform/>
                <RotateTransform/>
                <TranslateTransform x:Name="UIPosition" Y="0"/>
            </TransformGroup>
        </Canvas.RenderTransform>
        <!--限位圆环-->
        <Ellipse
            Width="103"
            Height="103"
            Stroke="DarkGray"
            StrokeThickness="3"
            Canvas.Left="-51.5"
            Canvas.Top="-111.5" />
        <!--中心点-->
        <Ellipse
            Width="2"
            Height="2"
            Fill="DarkGray"
            Canvas.Left="-1"
            Canvas.Top="-61">
        </Ellipse>
        <!--指示器-->
        <Ellipse
            Width="12"
            Height="12"
            Fill="OrangeRed"
            Canvas.Left="-6"
            Canvas.Top="-66" RenderTransformOrigin="0.5,0.5" >
            <Ellipse.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform x:Name="JoyStickPosIndicator" X="0" Y="0"/>
                </TransformGroup>
            </Ellipse.RenderTransform>
        </Ellipse>

    </Canvas>
</UserControl>
